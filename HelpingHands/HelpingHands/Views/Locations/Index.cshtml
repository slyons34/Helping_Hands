@model IEnumerable<HelpingHands.Models.Location>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <thead style="background-color:#178acc;color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
                <td>
                    <!--@Html.ActionLink("Edit", "Edit", new { id = item.LocationId })-->
                    <a href='@Url.Action("Edit", "Locations", new { id = item.LocationId })'>
                        <span class="glyphicon glyphicon-pencil" title="Edit" />
                    </a>          
                     |
                    <!--@Html.ActionLink("Details", "Details", new { id = item.LocationId })-->
                    <a href='@Url.Action("Details", "Locations", new { id = item.LocationId })'>
                        <span class="glyphicon glyphicon-list-alt" title="Detail"/>
                    </a> 
                     |
                    <!--@Html.ActionLink("Delete", "Delete", new { id = item.LocationId })-->
                    <a href='@Url.Action("Delete", "Locations", new { id = item.LocationId })'>
                        <span class="glyphicon glyphicon-trash" title="Delete"/>
                    </a>
                </td>
            </tr>
        }
       </tbody>
</table>
