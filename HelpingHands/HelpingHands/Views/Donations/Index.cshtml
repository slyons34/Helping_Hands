@model IEnumerable<HelpingHands.Models.Donation>

@{
    ViewBag.Title = "Index";
}

<h2 style="background-color:white;">Thanks for your generosity...</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-striped">
    <thead style="background-color:#178acc;color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
               <!--     @Html.ActionLink("Edit", "Edit", new { id = item.Id })  -->                 
                    <a href='@Url.Action("Edit", "Donations", new { id = item.Id})'>
                        <span class="glyphicon glyphicon-pencil" title="Edit" />
                    </a>                                         
                     |
                <!--    @Html.ActionLink("Details", "Details", new { id = item.Id })-->
                    <a href='@Url.Action("Details", "Donations", new { id = item.Id })'>
                        <span class="glyphicon glyphicon-list-alt" title="Detail" />
                    </a>                                        
                     |
               <!--     @Html.ActionLink("Delete", "Delete", new { id = item.Id }) -->

                    <a href='@Url.Action("Delete", "Donations", new { id = item.Id })'>
                        <span class="glyphicon glyphicon-trash" title="Delete" />
                    </a>
                </td>
            </tr>
        }

</table>
